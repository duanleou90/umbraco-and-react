@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<Umbraco.Cms.Core.Models.Blocks.BlockGridItem>
@{
    var content = (Ogallery)Model.Content;
}

<div class="new-gallery">
    <a class="new-gallery__image" href="@(content.Photos.ToList()[0].Url())" data-fancybox="tutor-gallery" aria-label="Open gallery">
        <img src="@(content.BaclgroundImage.Url())" alt="Presentation image">
    </a>
    <div class="new-gallery__photos">
        @foreach(var photo in content.Photos.Where(x => content.Photos.IndexOf(x) > 0))
        {
            <a href="@photo.Url()" data-fancybox="tutor-gallery" aria-label="Photo @(content.Photos.ToList().IndexOf(photo))"></a>
        }
    </div>
</div>




