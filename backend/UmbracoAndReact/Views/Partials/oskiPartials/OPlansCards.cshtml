@model IEnumerable<IPublishedElement>

<div class="support-plans__cards">
    @foreach (var item in Model ?? Enumerable.Empty<IPublishedElement>())
    {
        if (item is PlansCard plansCard)
        {
             var color = string.IsNullOrEmpty(plansCard.OBackgroundColor?.ToString()) ? "#70e3e1" : $"#{plansCard.OBackgroundColor}";
             var currency = plansCard.OCurrency[0];

            <div class="support-plans__item">

                <h4 class="support-plans__title-item" style="background-color:@color">@plansCard.OTitle</h4>

                <p class="support-plans__price-item"><span style="color:@color">@currency@plansCard.OPrice</span></p>
                <p class="support-plans__subtext-price">@plansCard.OPeriod</p>
                <p class="support-plans__content-item">@plansCard.ODescription</p>
                @if (plansCard.Olink != null)
                {
                    <a href="@plansCard.Olink.Url" class="support-plans__button-item">@plansCard.Olink.Name</a>
                }
            </div>  
        }
        if (item is OPlansCardNew plansCardNew)
        {
            <div class="plan-card">
                <h3 class="plan-card__title">@plansCardNew.OTitle</h3>
                <p class="plan-card__price">@plansCardNew.OPrice</p>
                <p class="plan-card__limitation">@plansCardNew.OLimitation</p>

                <div class="plan-card__options">
                    @foreach (var str in plansCardNew.OStrings)
                    {
                        <p>@str</p>
                    }
                </div>
            </div>    
        }
    }
</div>
